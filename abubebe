a = input('Введите номер телефона: ').strip()
# Убираем +7 или 8 в начале, оставляем 10 цифр
if a.startswith('+7'):
    a = a[2:]
elif a.startswith('8'):
    a = a[1:]

if len(a) == 10 and a.isdigit():
    nomer = f"({a[0]}{a[1]}{a[2]}) {a[3]}{a[4]}{a[5]}-{a[6]}{a[7]}-{a[8]}{a[9]}"
    print(nomer)
else:
    print('Ошибка: введите 10 цифр номера')