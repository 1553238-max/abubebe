min_limit = 0
max_limit = 10
count = 3
num = None

while count>0:
    print('попытка', count)
    count -=1
    print('введи число между',min_limit,'и',max_limit)
    num = float(input())
    if num < min_limit or num > max_limit:
        print('ошибка')
    else:
        break
else:
    print('попытки закончились')
    quit() # завершение работы программы 
print('введено число', num)